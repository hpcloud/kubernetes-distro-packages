description "Kubernetes Controller Manager daemon"

start on (net-device-up
  and started etcd
  and started flanneld
  and local-filesystems
  and runlevel [2345])
stop on runlevel [016]

respawn
post-stop exec sleep 10

pre-start script
    touch /var/log/kube-controller-manager.log
    chown kube /var/log/kube-controller-manager.log
end script

script
    if [ -f /etc/default/$UPSTART_JOB ]; then
        . /etc/default/$UPSTART_JOB
    fi

    exec sudo -u kube /usr/bin/kube-controller-manager $DAEMON_ARGS >>/var/log/kube-controller-manager.log 2>&1
end script
